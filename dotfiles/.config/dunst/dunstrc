[global]
    # Шрифт як у вашій системі
    font = JetBrains Mono 10 
    
    # Розташування (наприклад, зверху справа)
    origin = top-right
    offset = 50x50
    
    # Рамка (зробіть таку ж товщину, як у вікон bspwm)
    frame_width = 4
    separator_height = 2
    padding = 8
    horizontal_padding = 8
    
    # Радіус заокруглення (якщо використовуєте picom з corners)
    corner_radius = 0

[urgency_normal]
    background = "#2e3440"       # Фон (напр. Tokyo Night)
    foreground = "#d8dee9"       # Текст
    frame_color = "#F54927"      # Колір рамки (як колір активного вікна bspwm)
    timeout = 10
